{
  "magento": {
    "base_url": "https://your-magento-store.com",
    "admin_token": "your-admin-access-token-here",
    "store_id": 1,
    "website_id": 1,
    "store_view_code": "default"
  },
  "migration": {
    "batch_size": 10,
    "rate_limit_delay": 1,
    "max_retries": 3,
    "retry_delay": 2,
    "timeout": 30,
    "enable_logging": true,
    "log_level": "info"
  },
  "data_sources": {
    "products_csv": "data/source/export_catalog_product.csv",
    "sample_csv": "data/source/sample.csv",
    "images_directory": "data/source/images/",
    "backup_directory": "data/backup/"
  },
  "validation": {
    "validate_skus": true,
    "validate_categories": true,
    "validate_attributes": true,
    "validate_images": true,
    "skip_existing_products": false,
    "update_existing_products": true
  },
  "categories": {
    "create_missing_categories": true,
    "category_separator": "/",
    "default_category_status": true,
    "default_include_in_menu": true
  },
  "products": {
    "default_status": 1,
    "default_visibility": 4,
    "default_tax_class_id": 2,
    "default_weight": 1,
    "default_stock_status": 1,
    "default_manage_stock": true,
    "default_qty": 100,
    "default_is_in_stock": true
  },
  "attributes": {
    "create_missing_attributes": true,
    "create_missing_attribute_options": true,
    "default_attribute_set": "Office Supplies General"
  },
  "images": {
    "download_remote_images": true,
    "image_base_url": "",
    "supported_formats": ["jpg", "jpeg", "png", "gif"],
    "max_image_size_mb": 5,
    "generate_thumbnails": true
  },
  "performance": {
    "memory_limit": "512M",
    "execution_time_limit": 3600,
    "enable_progress_reporting": true,
    "progress_report_interval": 50
  },
  "error_handling": {
    "continue_on_error": true,
    "max_errors_per_batch": 5,
    "create_error_report": true,
    "email_error_reports": false,
    "error_email": ""
  },
  "localization": {
    "default_locale": "fr_FR",
    "currency": "EUR",
    "timezone": "Europe/Paris",
    "date_format": "d/m/Y",
    "decimal_separator": ",",
    "thousands_separator": " "
  }
}