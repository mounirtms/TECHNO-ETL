# Techno-ETL Backend Development Configuration
# Optimized for port 5000 backend

# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=development

# CORS Configuration (allow frontend on port 80)
CORS_ORIGIN=http://localhost:80,http://localhost,http://127.0.0.1:80,http://127.0.0.1,http://0.0.0.0:80,http://0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=1433
DB_NAME=TechnoETL_Dev
DB_USER=sa
DB_PASSWORD=your_password_here
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Magento API Configuration
MAGENTO_BASE_URL=https://your-magento-dev.com/rest/V1
MAGENTO_ACCESS_TOKEN=your_dev_token_here
MAGENTO_TIMEOUT=30000

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/development.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=10

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS_CREDENTIALS=true