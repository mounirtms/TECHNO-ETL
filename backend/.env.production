# Techno-ETL Backend Production Configuration
# Optimized for production deployment

# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=production

# CORS Configuration (production origins)
CORS_ORIGIN=http://etl.techno-dz.com,http://techno-webapp.web.app,http://dashboard.technostationery.com,http://localhost:80,http://localhost

# Database Configuration
DB_HOST=production-db-server
DB_PORT=1433
DB_NAME=TechnoETL_Prod
DB_USER=prod_user
DB_PASSWORD=secure_production_password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# Magento API Configuration
MAGENTO_BASE_URL=https://your-magento-prod.com/rest/V1
MAGENTO_ACCESS_TOKEN=production_token_here
MAGENTO_TIMEOUT=20000

# Redis Configuration
REDIS_HOST=production-redis-server
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/production.log
LOG_MAX_SIZE=52428800
LOG_MAX_FILES=10

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Cache Configuration (longer TTL for production)
CACHE_TTL=600
CACHE_CHECK_PERIOD=1200
CACHE_MAX_KEYS=5000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Security Configuration
JWT_SECRET=ultra_secure_jwt_secret_production
SESSION_SECRET=ultra_secure_session_secret_production
BCRYPT_ROUNDS=12

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Production Features
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_CORS_CREDENTIALS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# SSL Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000