# Techno-ETL Production Environment Configuration
# Optimized for production deployment

# Frontend Configuration
VITE_PORT=80
VITE_HOST=0.0.0.0
VITE_API_BASE_URL=http://localhost:5000

# Backend API Configuration
VITE_BACKEND_URL=http://localhost:5000
VITE_API_TIMEOUT=20000

# Service Routing Configuration
VITE_DASHBOARD_API_URL=http://localhost:5000/api/dashboard
VITE_MDM_API_URL=http://localhost:5000/api/mdm
VITE_TASK_API_URL=http://localhost:5000/api/task
VITE_MAGENTO_API_URL=http://localhost:5000/api/magento
VITE_HEALTH_API_URL=http://localhost:5000/api/health

# Production Magento Configuration
# VITE_MAGENTO_DIRECT_URL=https://production-magento-store.com/rest/V1

# Production Features
VITE_DEV_MODE=false
VITE_DEBUG_API=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Application Configuration
VITE_APP_NAME=Techno-ETL
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production

# Cache Configuration (longer timeouts for production)
VITE_CACHE_TIMEOUT=600000
VITE_ENABLE_CACHE=true

# Error Handling
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_RETRY_ATTEMPTS=2

# Performance Configuration (stricter for production)
VITE_REQUEST_TIMEOUT=15000
VITE_CIRCUIT_BREAKER_THRESHOLD=3
VITE_CIRCUIT_BREAKER_TIMEOUT=120000

# Security Configuration
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true