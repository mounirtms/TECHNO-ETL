# Magento Migration Node.js Environment Configuration
# Copy this file to .env and configure your settings

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Magento API Configuration
MAGENTO_BASE_URL=https://your-magento-store.com
MAGENTO_ADMIN_TOKEN=your-admin-access-token-here
MAGENTO_STORE_ID=1
MAGENTO_WEBSITE_ID=1
MAGENTO_STORE_VIEW_CODE=default
MAGENTO_TIMEOUT=30000
MAGENTO_RETRY_ATTEMPTS=3
MAGENTO_RETRY_DELAY=2000

# Migration Batch Sizes (Optimized for Performance)
BATCH_SIZE_SIMPLE_PRODUCTS=20
BATCH_SIZE_CONFIGURABLE_PRODUCTS=10
BATCH_SIZE_ATTRIBUTES=15
BATCH_SIZE_CATEGORIES=25
BATCH_SIZE_MEDIA=5

# Rate Limiting Configuration
REQUESTS_PER_SECOND=2
BURST_LIMIT=10
DELAY_BETWEEN_BATCHES=1000

# Error Handling
CONTINUE_ON_ERROR=true
MAX_ERRORS_PER_BATCH=5
CREATE_ERROR_REPORTS=true
LOG_RETENTION_DAYS=30

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000
MEMORY_THRESHOLD=512MB
ENABLE_PROGRESS_REPORTING=true
PROGRESS_REPORT_INTERVAL=50

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_IMAGE_SIZE=5MB